<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/note_list_margin_left_right"
        android:paddingRight="@dimen/note_list_margin_left_right">

        <TextView
            android:id="@+id/list_item_note_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:textSize="18sp"
            android:paddingTop="7dp"
            tools:text="Crime Title"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_note_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Crime Date"/>

            <TextView
                android:id="@+id/list_item_note_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="09:12 am"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorNoteItemSeparator"/>

</LinearLayout>
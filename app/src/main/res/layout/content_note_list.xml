<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/note_linear_layout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/note_list_margin_bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_note_list"
    tools:context=".NoteListActivity">

    <TextView
        android:id="@+id/note_empty_text_view"
        android:layout_width="match_parent"
        android:padding = "36dp"
        android:textColor="@color/colorFontNormal"
        android:textSize="@dimen/font_size_large"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/note_list_empty_label"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/note_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>




